<!-- modal start -->
<!-- modal :: updateForm start -->
{{#boardDetail}}
    <div class="modal fade" id="updateForm" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">

                <form action="/boards/{{id}}/update" method="post">
                    <div class="modal-header card-title">
                        <h2>채용 공고 수정</h2>
                    </div>
                    <div class="modal-body">
                        <table class="table">
                            <tr>
                                <td>공고 제목</td>
                                <td><input name="title" type="text" class="form-control" value="{{title}}"></td>
                            </tr>
                            <tr>
                                <td>채용 분야</td>
                                <td>
                                    <input name="field" type="text" class="form-control" value="{{field}}">
                                </td>
                            </tr>
                            <tr>
                                <td>포지션</td>
                                <td>
                                    <input name="position" type="text" class="form-control" value="{{position}}">
                                </td>
                            </tr>
                            <tr>
                                <td>내용</td>
                                <td>
                                    <textarea name="content" class="form-control"
                                              style="height: 300px">{{content}}</textarea>
                                </td>
                            </tr>
                            <tr>
                                <td>연봉</td>
                                <td>
                                    <input name="salary" type="text" class="form-control" value="{{salary}}">
                                </td>
                            </tr>
                            <tr>
                                <td>게시일</td>
                                <td>
                                    <input name="openingDate" type="date" class="form-control" value="{{openingDate}}">
                                </td>
                            </tr>
                            <tr>
                                <td>마감일</td>
                                <td>
                                    <input name="closingDate" type="date" class="form-control" value="{{closingDate}}">
                                </td>
                            </tr>
                        </table>
                        <br>
                        <h4 class="card-title">요구 스킬</h4>
                        <div class=form-control style="display: flex; justify-content: space-evenly">
                            <table class="table">
                                <tr>
                                    <td><input type="checkbox" name="skill" value="java"><span>Java</span></td>
                                    <td><input type="checkbox" name="skill" value="javaScript"><span>JavaScript</span>
                                    </td>
                                    <td><input type="checkbox" name="skill" value="Spring"><span>Spring</span></td>
                                    <td><input type="checkbox" name="skill" value="HTML"><span>HTML</span></td>
                                    <td><input type="checkbox" name="skill" value="jQuery"><span>JQuery</span></td>
                                </tr>
                                <tr>
                                    <td><input type="checkbox" name="skill" value="MySQL"><span>MySQL</span></td>
                                    <td><input type="checkbox" name="skill" value="Flutter"><span>Flutter</span></td>
                                    <td><input type="checkbox" name="skill" value="React"><span>React</span></td>
                                    <td><input type="checkbox" name="skill" value="AWS"><span>AWS</span></td>
                                    <td><input type="checkbox" name="skill" value="C"><span>C</span></td>
                                </tr>
                                <tr>
                                    <td><input type="checkbox" name="skill" value="Basic"><span>Basic</span></td>
                                    <td><input type="checkbox" name="skill" value="Python"><span>Python</span></td>
                                    <td><input type="checkbox" name="skill" value="Linux"><span>Linux</span></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <br>
                    <div class="modal-footer">
                        <div class="button-post-cancel">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
                            <button type="submit" class="btn btn-outline-dark">등록</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/boardDetail}}
<!-- modal :: updateForm end -->
<!-- modal :: deleteForm start -->
<div class="modal fade" id="deleteForm" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">공고 삭제</h5>
            </div>
            <div class="modal-body">
                해당 공고를 삭제하시겠습니까?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">취소</button>
                <form action="/boards/{{boardDetail.id}}/delete" method="post">
                    <button class="btn btn-secondary">삭제</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- modal :: deleteForm end -->
<!-- modal end -->